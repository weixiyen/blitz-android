            android:scaleType="centerCrop"/>

        <RelativeLayout
            android:id="@+id/draft_player_stats_tr"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:layout_alignParentBottom="true"
            android:layout_margin="2dp"
            android:background="@drawable/drawable_draft_card"
            android:orientation="vertical"
            android:paddingBottom="2dp">

            <com.blitz.app.utilities.textview.BlitzTextView
                android:id="@+id/draft_player_name_tr"
                fontPath="@string/app_font_helvetica_condensed_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:singleLine="true"
                android:textAllCaps="true"
                android:textColor="@color/text_color_black"
                android:textSize="12sp"/>

            <com.blitz.app.utilities.textview.BlitzTextView
                android:id="@+id/draft_player_info_tr"
                fontPath="@string/app_font_helvetica_condensed_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:paddingLeft="12dp"
                android:singleLine="true"
                android:textAllCaps="true"
                android:textColor="@color/text_color_medium_grey"
                android:textSize="12sp"/>

            <com.blitz.app.utilities.textview.BlitzTextView
                android:id="@+id/draft_player_opponent_tr"
                fontPath="@string/app_font_helvetica_condensed_bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:gravity="center|right"
                android:paddingRight="12dp"
                android:singleLine="true"
                android:textAllCaps="true"
                android:textColor="@color/text_color_black"
                android:textSize="16sp"/>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/draft_player_bl"
        android:layout_width="145dp"
        android:layout_height="190dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/draft_player_tl"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:visibility="invisible">

        <View
            android:layout_width="match_parent"
            android:layout_height="141dp"
            android:layout_margin="2dp"
            android:background="@drawable/drawable_draft_player"/>

        <com.blitz.app.utilities.image.BlitzImageView
            android:id="@+id/draft_player_image_bl"
            android:layout_width="145dp"
