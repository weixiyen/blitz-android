            android:orientation="vertical"
            android:paddingBottom="2dp">

            <com.blitz.app.utilities.textview.BlitzTextView
                android:id="@+id/draft_player_name_br"
                fontPath="@string/app_font_helvetica_condensed_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:singleLine="true"
                android:textAllCaps="true"
                android:textColor="@color/text_color_black"
                android:textSize="12sp"/>

            <com.blitz.app.utilities.textview.BlitzTextView
                android:id="@+id/draft_player_info_br"
                fontPath="@string/app_font_helvetica_condensed_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:paddingLeft="12dp"
                android:singleLine="true"
                android:textAllCaps="true"
                android:textColor="@color/text_color_medium_grey"
                android:textSize="12sp"/>

            <com.blitz.app.utilities.textview.BlitzTextView
                android:id="@+id/draft_player_opponent_br"
                fontPath="@string/app_font_helvetica_condensed_bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
