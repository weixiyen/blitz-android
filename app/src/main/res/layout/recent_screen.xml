<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${packageName}.${activityClass}"
    tools:ignore="ButtonStyle,UnusedAttribute">

    <com.blitz.app.utilities.image.BlitzImageViewPlus
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/empty_string"
        android:scaleX="-1"
        android:src="@drawable/asset_bg_main_dark"
        app:scaleType="topCrop" />

    <com.blitz.app.utilities.textview.BlitzTextView
        android:id="@+id/recent_header"
        style="@style/App.NavBar"
        android:layout_height="@dimen/navbar_height_padding_included"
        android:paddingTop="@dimen/navbar_height_padding"
        android:text="@string/lorum_ipsum_tiny"
        app:clearInitialContent="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="@dimen/navbar_height_padding_included"
        android:background="@color/background_inner_dark"
        android:orientation="horizontal">

        <TextView
            style="@style/App.TextView"
            fontPath="@string/app_font_helvetica_condensed_bold"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Wins"
            android:textAllCaps="true"
            android:textColor="@color/text_color_dark"
            android:textSize="13sp"/>

        <TextView
            style="@style/App.TextView"
            fontPath="@string/app_font_helvetica_condensed_bold"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Losses"
            android:textAllCaps="true"
            android:textColor="@color/text_color_dark"
            android:textSize="13sp"/>

        <TextView
            style="@style/App.TextView"
            fontPath="@string/app_font_helvetica_condensed_bold"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Earnings"
            android:textAllCaps="true"
            android:textColor="@color/text_color_dark"
            android:textSize="13sp"/>

        <TextView
            style="@style/App.TextView"
            fontPath="@string/app_font_helvetica_condensed_bold"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Rating"
            android:textAllCaps="true"
            android:textColor="@color/text_color_dark"
            android:textSize="13sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="155dp"
        android:background="@color/background_inner_dark"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView android:id="@+id/recent_week_wins"
            style="@style/App.TextView"
            fontPath="@string/app_font_helvetica_condensed_bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0"
            android:textAllCaps="true"
            android:textColor="@color/text_color_light"
            android:textSize="20sp"/>

        <TextView android:id="@+id/recent_week_losses"
            style="@style/App.TextView"
            fontPath="@string/app_font_helvetica_condensed_bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0"
            android:textAllCaps="true"
            android:textColor="@color/text_color_light"
            android:textSize="20sp"/>

        <TextView android:id="@+id/recent_week_earnings"
            style="@style/App.TextView"
            fontPath="@string/app_font_helvetica_condensed_bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_weight="1"
            android:gravity="center"
            android:text="+$0.00"
            android:textAllCaps="true"
            android:textColor="@color/text_color_light"
            android:textSize="20sp"/>

        <TextView android:id="@+id/recent_week_rating_change"
            style="@style/App.TextView"
            fontPath="@string/app_font_helvetica_condensed_bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_weight="1"
            android:gravity="center"
            android:text="+0"
            android:textAllCaps="true"
            android:textColor="@color/text_color_light"
            android:textSize="20sp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="205dp"
        android:background="@color/background_inner_divider"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="206dp"
        android:background="@color/background_inner"/>

    <ListView
        android:id="@+id/recent_drafts_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="206dp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/recent_no_games"
        fontPath="@string/app_font_helvetica_condensed_bold"
        android:layout_width="@dimen/screen_width"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="206dp"
        android:gravity="center"
        android:lineSpacingMultiplier="1.1"
        android:textColor="@color/text_color_dark"
        android:textSize="28sp"
        android:visibility="gone"/>

    <com.blitz.app.utilities.textview.BlitzTextView
        android:id="@+id/recent_scrubber_week"
        style="@style/App.TextView"
        fontPath="@string/app_font_bold"
        android:layout_width="128dp"
        android:layout_height="64dp"
        android:layout_above="@+id/recent_scrubber"
        android:layout_centerHorizontal="true"
        android:background="@drawable/asset_bg_scrubber"
        android:gravity="center"
        android:text="@string/lorum_ipsum_tiny"
        android:textSize="16sp"
        app:clearInitialContent="true"/>

    <com.blitz.app.utilities.scrubber.BlitzScrubber
        android:id="@+id/recent_scrubber"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/drawable_bg_scrubber"
        android:gravity="center"
        android:orientation="horizontal"/>

</RelativeLayout>