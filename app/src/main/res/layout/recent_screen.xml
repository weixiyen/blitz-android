<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${packageName}.${activityClass}"
    tools:ignore="ButtonStyle,UnusedAttribute">

    <com.blitz.app.utilities.image.BlitzImageViewPlus
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/empty_string"
        android:scaleX="-1"
        android:src="@drawable/asset_bg_main_dark"
        app:scaleType="topCrop" />

    <com.blitz.app.utilities.textview.BlitzTextView
        android:id="@+id/recent_header"
        style="@style/App.NavBar"
        android:layout_height="@dimen/navbar_height_padding_included"
        android:paddingTop="@dimen/navbar_height_padding"
        android:text="@string/lorum_ipsum_tiny"
        app:clearInitialContent="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:layout_marginTop="@dimen/navbar_height_padding_included"
        android:background="@drawable/drawable_bg_inner_dark"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:orientation="horizontal">

            <TextView
                style="@style/App.TextView"
                fontPath="@string/app_font_helvetica_condensed_bold"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/wins"
                android:textAllCaps="true"
                android:textColor="@color/text_color_dark"
                android:textSize="16sp"/>

            <TextView
                style="@style/App.TextView"
                fontPath="@string/app_font_helvetica_condensed_bold"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/losses"
                android:textAllCaps="true"
                android:textColor="@color/text_color_dark"
                android:textSize="16sp"/>

            <TextView
                style="@style/App.TextView"
                fontPath="@string/app_font_helvetica_condensed_bold"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/earnings"
                android:textAllCaps="true"
                android:textColor="@color/text_color_dark"
                android:textSize="16sp"/>

            <TextView
                style="@style/App.TextView"
                fontPath="@string/app_font_helvetica_condensed_bold"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/rating"
                android:textAllCaps="true"
                android:textColor="@color/text_color_dark"
                android:textSize="16sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/recent_week_wins"
                style="@style/App.TextView"
                fontPath="@string/app_font_helvetica_condensed_bold"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/number_small"
                android:textAllCaps="true"
                android:textSize="24sp"/>

            <TextView
                android:id="@+id/recent_week_losses"
                style="@style/App.TextView"
                fontPath="@string/app_font_helvetica_condensed_bold"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/number_small"
                android:textAllCaps="true"
                android:textSize="24sp"/>

            <TextView
                android:id="@+id/recent_week_earnings"
                style="@style/App.TextView"
                fontPath="@string/app_font_helvetica_condensed_bold"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/number_large"
                android:textAllCaps="true"
                android:textSize="24sp"/>

            <TextView
                android:id="@+id/recent_week_rating_change"
                style="@style/App.TextView"
                fontPath="@string/app_font_helvetica_condensed_bold"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/number_small"
                android:textAllCaps="true"
                android:textSize="24sp"/>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="215dp"
        android:orientation="vertical">

        <ListView
            android:id="@+id/recent_drafts_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@null"
            android:dividerHeight="0dp"
            android:footerDividersEnabled="false"
            android:gravity="center"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recent_drafts_list"
            android:background="@color/background_inner"/>

        <TextView
            android:id="@+id/recent_no_games"
            fontPath="@string/app_font_helvetica_condensed_bold"
            android:layout_width="@dimen/screen_width"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:lineSpacingMultiplier="1.1"
            android:textColor="@color/text_color_dark"
            android:textSize="28sp"
            android:visibility="gone"/>
    </RelativeLayout>

    <com.blitz.app.utilities.textview.BlitzTextView
        android:id="@+id/recent_scrubber_week"
        style="@style/App.TextView"
        fontPath="@string/app_font_helvetica_condensed_bold"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:layout_above="@+id/recent_scrubber"
        android:layout_centerHorizontal="true"
        android:background="@drawable/asset_bg_scrubber"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="@string/lorum_ipsum_tiny"
        android:textSize="14sp"
        app:clearInitialContent="true"/>

    <com.blitz.app.utilities.scrubber.BlitzScrubber
        android:id="@+id/recent_scrubber"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/drawable_bg_scrubber"
        android:gravity="center"
        android:orientation="horizontal"/>
</RelativeLayout>