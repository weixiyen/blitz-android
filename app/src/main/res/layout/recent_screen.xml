<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_recent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${packageName}.${activityClass}"
    tools:ignore="ButtonStyle,UnusedAttribute,HardcodedText">

    <com.blitz.app.utilities.image.BlitzImageViewPlus
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/empty_string"
        android:scaleX="-1"
        android:src="@drawable/asset_bg_main_dark"
        app:scaleType="topCrop" />

    <Spinner
        android:id="@+id/main_recent_header"
        style="@style/App.NavBar"
        android:layout_height="110dp"
        android:gravity="center"
        android:popupBackground="@color/background_transparent"
        android:dropDownWidth="225dp"
        android:paddingTop="50dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignBottom="@+id/main_recent_header"
        android:background="@color/background_inner_divider"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="110dp"
        android:background="@color/background_inner_dark"
        android:orientation="horizontal">

        <TextView
            style="@style/App.TextView"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            fontPath="@string/app_font_helvetica_condensed_bold"
            android:gravity="center"
            android:text="Wins"
            android:textAllCaps="true"
            android:textColor="@color/text_color_dark"
            android:textSize="13sp"/>

        <TextView
            style="@style/App.TextView"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            fontPath="@string/app_font_helvetica_condensed_bold"
            android:gravity="center"
            android:text="Losses"
            android:textAllCaps="true"
            android:textColor="@color/text_color_dark"
            android:textSize="13sp"/>

        <TextView
            style="@style/App.TextView"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            fontPath="@string/app_font_helvetica_condensed_bold"
            android:gravity="center"
            android:text="Earnings"
            android:textAllCaps="true"
            android:textColor="@color/text_color_dark"
            android:textSize="13sp"/>

        <TextView
            style="@style/App.TextView"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            fontPath="@string/app_font_helvetica_condensed_bold"
            android:gravity="center"
            android:text="Rating"
            android:textAllCaps="true"
            android:textColor="@color/text_color_dark"
            android:textSize="13sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="155dp"
        android:background="@color/background_inner_dark"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView android:id="@+id/wins"
            style="@style/App.TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_weight="1"
            fontPath="@string/app_font_helvetica_condensed_bold"
            android:gravity="center"
            android:text="0"
            android:textAllCaps="true"
            android:textColor="@color/text_color_light"
            android:textSize="20sp"/>

        <TextView android:id="@+id/losses"
            style="@style/App.TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_weight="1"
            fontPath="@string/app_font_helvetica_condensed_bold"
            android:gravity="center"
            android:text="0"
            android:textAllCaps="true"
            android:textColor="@color/text_color_light"
            android:textSize="20sp"/>

        <TextView android:id="@+id/earnings"
            style="@style/App.TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_weight="1"
            fontPath="@string/app_font_helvetica_condensed_bold"
            android:gravity="center"
            android:text="+$0.00"
            android:textAllCaps="true"
            android:textColor="@color/text_color_light"
            android:textSize="20sp"/>

        <TextView android:id="@+id/rating_change"
            style="@style/App.TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_weight="1"
            fontPath="@string/app_font_helvetica_condensed_bold"
            android:gravity="center"
            android:text="+0"
            android:textAllCaps="true"
            android:textColor="@color/text_color_light"
            android:textSize="20sp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="205dp"
        android:background="@color/background_inner_divider"/>

    <ListView
        android:id="@+id/main_recent_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_marginBottom="35dp"
        android:layout_marginTop="206dp"
        android:background="@color/background_inner"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="35dp"
        android:layout_marginTop="206dp"
        fontPath="@string/app_font_helvetica_condensed_bold"
        android:gravity="center"
        android:visibility="gone"
        android:lineSpacingMultiplier="1.1"
        android:text="No games this week!"
        android:textSize="32sp"/>

    <LinearLayout
        android:id="@+id/main_recent_scrubber"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:background="#40000000"
        android:gravity="center"
        android:orientation="horizontal"/>

    <View
        android:id="@+id/main_recent_footer_border_0"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignTop="@+id/main_recent_scrubber"
        android:background="@color/background_inner_divider"/>
</RelativeLayout>