<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${packageName}.${activityClass}"
    tools:ignore="ButtonStyle,UnusedAttribute">

    <com.blitz.app.utilities.imageview_plus.ImageViewPlus
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/empty_string"
        android:src="@drawable/asset_bg_queue"
        app:scaleType="topCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/queue_promo_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="25dp"
            android:orientation="vertical">

            <me.grantland.widget.AutofitTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@string/app_font_bold"
                android:gravity="right"
                android:shadowColor="@color/text_color_shadow"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:singleLine="true"
                android:text="@string/place_reserved"
                android:textColor="@color/text_color_light"
                android:textSize="20sp"/>

            <me.grantland.widget.AutofitTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@string/app_font_light"
                android:gravity="right"
                android:lines="2"
                android:shadowColor="@color/text_color_shadow"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:text="@string/on_your_way"
                android:textColor="@color/text_color_light"
                android:textSize="16sp"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:id="@+id/queue_position_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:layout_marginTop="75dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:background="@drawable/asset_queue_container"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingBottom="10dp"
                    android:paddingLeft="120dp"
                    android:paddingRight="20dp"
                    android:paddingTop="10dp">

                    <me.grantland.widget.AutofitTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@string/app_font_sports"
                        android:gravity="center"
                        android:shadowColor="@color/text_color_shadow"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="2"
                        android:singleLine="true"
                        android:text="@string/number_large"
                        android:textColor="@color/text_color_link"
                        android:textSize="40sp"/>

                    <me.grantland.widget.AutofitTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@string/app_font_regular"
                        android:gravity="center"
                        android:padding="5dp"
                        android:shadowColor="@color/text_color_shadow"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="2"
                        android:singleLine="true"
                        android:text="@string/players_in_front"
                        android:textColor="@color/text_color_light"
                        android:textSize="16sp"/>

                    <me.grantland.widget.AutofitTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@string/app_font_sports"
                        android:gravity="center"
                        android:shadowColor="@color/text_color_shadow"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="2"
                        android:singleLine="true"
                        android:text="@string/number_small"
                        android:textColor="@color/text_color_light"
                        android:textSize="30sp"/>

                    <me.grantland.widget.AutofitTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@string/app_font_regular"
                        android:gravity="center"
                        android:padding="5dp"
                        android:shadowColor="@color/text_color_shadow"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="2"
                        android:singleLine="true"
                        android:text="@string/players_behind_you"
                        android:textColor="@color/text_color_light"
                        android:textSize="16sp"/>
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/queue_football_player"
                android:layout_width="170dp"
                android:layout_height="285dp"
                android:contentDescription="@string/empty_string"
                android:src="@drawable/asset_queue_player" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/queue_calls_to_action"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <Button
            android:id="@+id/queue_screen_have_code"
            style="@style/ButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/drawable_button_big"
            android:text="@string/have_code" />

        <me.grantland.widget.AutofitTextView
            android:id="@+id/queue_screen_have_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/empty_string"
            android:fontFamily="@string/app_font_light"
            android:gravity="center"
            android:padding="10dp"
            android:shadowColor="@color/text_color_shadow"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"
            android:singleLine="true"
            android:text="@string/already_have_account"
            android:textColor="@color/text_color_light"
            android:textSize="14sp" />
    </LinearLayout>
</RelativeLayout>