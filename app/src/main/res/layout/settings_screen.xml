<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${packageName}.${activityClass}"
    tools:ignore="ButtonStyle,UnusedAttribute,RelativeOverlap">

    <com.blitz.app.utilities.image.BlitzImageViewPlus
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/empty_string"
        android:src="@drawable/asset_bg_main_dark"
        app:scaleType="topCrop" />

    <TextView
        android:id="@+id/settings_header"
        style="@style/App.NavBar"
        android:layout_height="110dp"
        android:paddingTop="50dp"
        android:text="@string/my_account" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignBottom="@+id/settings_header"
        android:background="@color/background_inner_divider"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="110dp"
        android:background="@color/background_inner">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="vertical">

            <android.support.v4.view.ViewPager
                android:id="@+id/settings_carousel"
                android:layout_width="match_parent"
                android:layout_height="@dimen/helmet_size"
                android:background="@color/background_inner_dark"
                android:gravity="center"
                android:overScrollMode="never"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:background="@color/background_inner_dark"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/background_inner_divider"/>

            <com.blitz.app.utilities.textview.BlitzTextView
                android:id="@+id/settings_email"
                style="@style/App.TextView"
                fontPath="@string/app_font_helvetica_condensed_bold"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:background="@color/background_inner_dark"
                android:gravity="center|left"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:text="@string/lorum_ipsum_tiny"
                android:textSize="16sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/background_inner_divider"
                android:visibility="gone"/>

            <Button
                style="@style/App.Button"
                fontPath="@string/app_font_helvetica_condensed_bold"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:background="@color/background_inner_dark"
                android:gravity="center|left"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:text="Change Password"
                android:textColor="@color/text_color_dark"
                android:textSize="16sp"
                android:visibility="gone"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/background_inner_divider"/>

            <Switch
                android:id="@+id/settings_toggle_sound"
                fontPath="@string/app_font_helvetica_condensed_bold"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:background="@color/background_transparent"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:text="@string/push_notifications"
                android:textColor="@color/text_color_light_grey"
                android:textSize="16sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/background_inner_divider"/>

            <Switch
                android:id="@+id/settings_toggle_music"
                fontPath="@string/app_font_helvetica_condensed_bold"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:background="@color/background_transparent"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:text="@string/music_and_sounds"
                android:textColor="@color/text_color_light_grey"
                android:textSize="16sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/background_inner_divider"
                android:visibility="gone"/>

            <LinearLayout
                style="@style/App.Button"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:background="@color/background_inner"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:visibility="gone">

                <TextView
                    style="@style/App.TextView"
                    fontPath="@string/app_font_helvetica_condensed_bold"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:text="@string/unlock_more_helmets"
                    android:textAllCaps="true"
                    android:textColor="@color/text_color_dark"
                    android:textSize="16sp"/>

                <TextView
                    style="@style/App.TextView"
                    fontPath="@string/app_font_helvetica_condensed_bold"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:text="@string/invite_a_friend"
                    android:textColor="@color/active_blue"
                    android:textSize="16sp"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/background_inner_divider"
                android:visibility="gone"/>

            <!-- Invitation links -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/background_inner">

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingLeft="25dp"
                    android:paddingRight="25dp">

                    <Button
                        style="@style/App.Button"
                        fontPath="@string/app_font_helvetica_condensed_bold"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@android:color/transparent"
                        android:gravity="center|left"
                        android:text="@string/blitz_access_code"
                        android:textAllCaps="true"
                        android:textColor="@color/text_color_dark"
                        android:textSize="12sp"/>

                    <Button
                        style="@style/App.Button"
                        fontPath="@string/app_font_helvetica_condensed_bold"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@android:color/transparent"
                        android:gravity="center|left"
                        android:text="pHSag92G"
                        android:textSize="16sp"/>
                </LinearLayout>

                <Button
                    style="@style/App.Button"
                    fontPath="@string/app_font_helvetica_condensed_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center_horizontal"
                    android:background="@android:color/transparent"
                    android:gravity="center|left"
                    android:paddingLeft="25dp"
                    android:paddingRight="25dp"
                    android:text="@string/send"
                    android:textColor="@color/active_blue"
                    android:textSize="20sp"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/background_inner_divider"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/background_inner">

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingLeft="25dp"
                    android:paddingRight="25dp">

                    <Button
                        style="@style/App.Button"
                        fontPath="@string/app_font_helvetica_condensed_bold"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@android:color/transparent"
                        android:gravity="center|left"
                        android:text="@string/blitz_access_code"
                        android:textAllCaps="true"
                        android:textColor="@color/text_color_dark"
                        android:textSize="12sp"/>

                    <Button
                        style="@style/App.Button"
                        fontPath="@string/app_font_helvetica_condensed_bold"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@android:color/transparent"
                        android:gravity="center|left"
                        android:text="pHSag92G"
                        android:textSize="16sp"/>
                </LinearLayout>

                <Button
                    style="@style/App.Button"
                    fontPath="@string/app_font_helvetica_condensed_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center_horizontal"
                    android:background="@android:color/transparent"
                    android:gravity="center|left"
                    android:paddingLeft="25dp"
                    android:paddingRight="25dp"
                    android:text="@string/send"
                    android:textColor="@color/active_blue"
                    android:textSize="20sp"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/background_inner_divider"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/background_inner">

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingLeft="25dp"
                    android:paddingRight="25dp">

                    <Button
                        style="@style/App.Button"
                        fontPath="@string/app_font_helvetica_condensed_bold"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@android:color/transparent"
                        android:gravity="center|left"
                        android:text="@string/blitz_access_code"
                        android:textAllCaps="true"
                        android:textColor="@color/text_color_dark"
                        android:textSize="12sp"/>

                    <Button
                        style="@style/App.Button"
                        fontPath="@string/app_font_helvetica_condensed_bold"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@android:color/transparent"
                        android:gravity="center|left"
                        android:text="pHSag92G"
                        android:textSize="16sp"/>
                </LinearLayout>

                <Button
                    style="@style/App.Button"
                    fontPath="@string/app_font_helvetica_condensed_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center_horizontal"
                    android:background="@android:color/transparent"
                    android:gravity="center|left"
                    android:paddingLeft="25dp"
                    android:paddingRight="25dp"
                    android:text="@string/send"
                    android:textColor="@color/active_blue"
                    android:textSize="20sp"/>
            </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/background_inner_divider"/>

            <Button
                android:id="@+id/settings_terms_of_use"
                style="@style/App.Button"
                fontPath="@string/app_font_helvetica_condensed_bold"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:textColor="@color/text_color_light_grey"
                android:layout_gravity="center_horizontal"
                android:background="@color/background_transparent"
                android:gravity="center|left"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:text="@string/terms_of_use"
                android:textSize="16sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/background_inner_divider"/>

            <Button
                android:id="@+id/settings_privacy_policy"
                style="@style/App.Button"
                fontPath="@string/app_font_helvetica_condensed_bold"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:textColor="@color/text_color_light_grey"
                android:layout_gravity="center_horizontal"
                android:background="@color/background_transparent"
                android:gravity="center|left"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:text="@string/privacy_policy"
                android:textSize="16sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/background_inner_divider"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/background_transparent">

                <TextView
                    android:id="@+id/settings_support"
                    style="@style/App.TextView"
                    fontPath="@string/app_font_helvetica_condensed_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/text_color_light_grey"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:paddingLeft="25dp"
                    android:paddingRight="25dp"
                    android:text="@string/contact_us"
                    android:textSize="16sp"/>

                <com.blitz.app.utilities.textview.BlitzTextView
                    android:id="@+id/settings_version"
                    style="@style/App.TextView"
                    fontPath="@string/app_font_helvetica_condensed_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/text_color_light_grey"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:paddingLeft="25dp"
                    android:layout_alignParentRight="true"
                    android:paddingRight="25dp"
                    android:alpha=".75"
                    android:text="@string/version"
                    android:textSize="12sp"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/background_inner_divider"/>

            <Button
                android:id="@+id/settings_logout"
                style="@style/App.Button"
                fontPath="@string/app_font_helvetica_condensed_bold"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/background_transparent"
                android:gravity="center|left"
                android:paddingLeft="25dp"
                android:textColor="@color/text_color_light_grey"
                android:paddingRight="25dp"
                android:text="@string/logout"
                android:textSize="16sp"/>

            <View
                android:id="@+id/settings_reset_border"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/background_inner_divider"/>

            <Button
                android:id="@+id/settings_reset"
                style="@style/App.Button"
                fontPath="@string/app_font_helvetica_condensed_bold"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/background_transparent"
                android:gravity="center|left"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:text="@string/reset"
                android:textColor="@color/text_color_light_grey"
                android:textSize="16sp"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>