<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/screen_width"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    tools:context="${packageName}.${activityClass}"
    tools:ignore="ButtonStyle,UnusedAttribute">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="127dp"
        android:background="@drawable/asset_bg_profile_play"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="120dp"
        android:paddingRight="10dp">

        <com.blitz.app.utilities.textview.BlitzTextView
            android:id="@+id/main_play_stats_username"
            style="@style/TextViewStyle"
            fontPath="@string/app_font_sports"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingTop="10dp"
            android:singleLine="true"
            android:text="@string/lorum_ipsum_tiny"
            android:textColor="@color/text_color_light"
            android:textSize="20sp"
            app:cacheText="true"
            app:clearInitialContent="true"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-6dp"
                android:layout_marginLeft="-6dp"
                android:contentDescription="@string/empty_string"
                android:src="@drawable/asset_play_icon_elo" />

            <com.blitz.app.utilities.textview.BlitzTextView
                android:id="@+id/main_play_stats_rating"
                style="@style/TextViewStyle"
                fontPath="@string/app_font_sports"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/number_large"
                android:textColor="@color/text_color_link"
                android:textSize="20sp"
                app:cacheText="true"
                app:clearInitialContent="true"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="3dp"
            android:orientation="horizontal">

            <TextView
                style="@style/TextViewStyle"
                fontPath="@string/app_font_sports"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/wins"
                android:textAllCaps="true"
                android:textColor="@color/text_color_light"
                android:textSize="16sp"/>

            <TextView
                style="@style/TextViewStyle"
                fontPath="@string/app_font_sports"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/loss"
                android:textAllCaps="true"
                android:textColor="@color/text_color_grey"
                android:textSize="16sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.blitz.app.utilities.textview.BlitzTextView
                android:id="@+id/main_play_stats_wins"
                style="@style/TextViewStyle"
                fontPath="@string/app_font_sports"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/number_small"
                android:textAllCaps="true"
                android:textColor="@color/text_color_light"
                android:textSize="24sp"
                app:cacheText="true"
                app:clearInitialContent="true"/>

            <com.blitz.app.utilities.textview.BlitzTextView
                android:id="@+id/main_play_stats_losses"
                style="@style/TextViewStyle"
                fontPath="@string/app_font_sports"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/number_small"
                android:textAllCaps="true"
                android:textColor="@color/text_color_grey"
                android:textSize="24sp"
                app:cacheText="true"
                app:clearInitialContent="true"/>
        </LinearLayout>

        <TextView
            android:id="@+id/main_play_leaderboard_link"
            style="@style/TextViewStyle"
            fontPath="@string/app_font_sports"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:text="@string/leaderboard_link_text"
            android:textAllCaps="true"
            android:textColor="@color/text_color_link"
            android:textSize="16sp"/>

    </LinearLayout>

    <com.blitz.app.utilities.imageview.BlitzImageView
        android:id="@+id/main_play_stats_avatar"
        android:layout_width="@dimen/helmet_size"
        android:layout_height="@dimen/helmet_size"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="-5dp"
        android:contentDescription="@string/empty_string"
        android:src="@drawable/asset_bg_helmet_sample"
        app:cacheImageURL="true"
        app:clearInitialContent="true"/>

</RelativeLayout>