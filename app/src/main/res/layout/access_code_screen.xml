<!--suppress XmlUnusedNamespaceDeclaration -->

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${packageName}.${activityClass}"
    tools:ignore="ButtonStyle,HardcodedText">

    <com.blitz.app.utilities.imageview_plus.ImageViewPlus
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/empty_string"
        android:scaleX="-1"
        android:src="@drawable/asset_bg_queue"
        app:scaleType="topCrop" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="420dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:contentDescription="@string/empty_string"
        android:scaleX="-1"
        android:src="@drawable/asset_bg_queue_player_alt" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:contentDescription="@string/empty_string"
                android:src="@drawable/icon_blitz" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="10dp"
                android:background="@color/background_primary"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:fontFamily="@string/app_font_light"
                android:gravity="center_vertical"
                android:text="Enter Access Code"
                android:textColor="@color/text_color_light"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/access_code_screen_code"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                android:background="@color/button_color_1"
                android:fontFamily="@string/app_font_regular"
                android:gravity="center_vertical"
                android:hint="Enter Access Code"
                android:inputType="number"
                android:maxLength="5"
                android:padding="10dp"
                android:textColor="@color/text_color_light"
                android:textSize="14sp" />

        </LinearLayout>

        <me.grantland.widget.AutofitTextView
            android:id="@+id/access_code_screen_continue_with_code"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/asset_bg_queue_button"
            android:contentDescription="@string/empty_string"
            android:fontFamily="@string/app_font_regular"
            android:gravity="center"
            android:paddingBottom="2dp"
            android:shadowColor="@color/text_color_shadow"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"
            android:singleLine="true"
            android:text="@string/continue_string"
            android:textColor="@color/text_color_light"
            android:textSize="20sp" />

    </LinearLayout>
</RelativeLayout>