<!--suppress XmlUnusedNamespaceDeclaration -->

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${packageName}.${activityClass}"
    tools:ignore="ButtonStyle,HardcodedText">

    <com.blitz.app.utilities.imageview_plus.ImageViewPlus
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/empty_string"
        android:scaleX="-1"
        android:src="@drawable/asset_bg_queue"
        app:scaleType="topCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/access_code_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="25dp"
                android:fontFamily="@string/app_font_bold"
                android:gravity="center"
                android:shadowColor="@color/text_color_shadow"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:text="Passcode"
                android:textColor="@color/text_color_light"
                android:textSize="20sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <EditText
                android:id="@+id/access_code_code"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/drawable_queue_input"
                android:fontFamily="@string/app_font_regular"
                android:gravity="center_vertical"
                android:hint="Enter Access Code"
                android:inputType="number"
                android:maxLength="5"
                android:paddingLeft="70dp"
                android:shadowColor="@color/text_color_shadow"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:textColor="@color/text_color_light"
                android:textColorHint="@color/text_color_light"
                android:textSize="14sp" />

        </LinearLayout>

        <me.grantland.widget.AutofitTextView
            android:id="@+id/access_code_continue_with_code"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/drawable_button_big"
            android:contentDescription="@string/empty_string"
            android:fontFamily="@string/app_font_regular"
            android:gravity="center"
            android:paddingBottom="2dp"
            android:shadowColor="@color/text_color_shadow"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"
            android:singleLine="true"
            android:text="@string/continue_string"
            android:textColor="@color/text_color_light"
            android:textSize="20sp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/access_code_player"
        android:layout_width="150dp"
        android:layout_height="420dp"
        android:layout_marginRight="-1dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:contentDescription="@string/empty_string"
        android:src="@drawable/asset_bg_queue_player_alt" />

</RelativeLayout>