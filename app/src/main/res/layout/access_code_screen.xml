<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".screens.access_code.AccessCodeScreen"
    tools:ignore="ButtonStyle,HardcodedText">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:background="@color/background_inner"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:fontFamily="@string/app_font_light"
            android:gravity="center"
            android:text="Enter Access Code"
            android:textColor="@color/text_color_light"
            android:textSize="16sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/access_code_screen_continue_with_code"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/button_color_0"
            android:contentDescription="@string/empty_string"
            android:fontFamily="@string/app_font_light"
            android:text="Continue"
            android:textColor="@color/text_color_light"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>