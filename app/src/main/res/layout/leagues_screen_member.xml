<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@drawable/drawable_bg_inner"
    android:gravity="center"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/leagues_member_rank"
        style="@style/LeaderboardListItem"
        android:layout_width="32dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="@string/number_large"
        android:textColor="@color/text_color_dark"/>

    <TextView
        android:id="@+id/leagues_member_user_name"
        style="@style/LeaderboardListItem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:singleLine="true"
        android:text="@string/lorum_ipsum_short"
        android:textColor="@color/text_color_light"/>

    <TextView
        android:id="@+id/leagues_member_wins"
        style="@style/LeaderboardListItem"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:text="@string/number_large"
        android:textColor="@color/text_color_dark"/>

    <TextView
        android:id="@+id/leagues_member_losses"
        style="@style/LeaderboardListItem"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="@string/number_large"
        android:textColor="@color/text_color_dark"/>

    <TextView
        android:id="@+id/leagues_member_rating"
        style="@style/LeaderboardListItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:text="@string/number_large"
        android:textColor="@color/active_blue"/>
</LinearLayout>