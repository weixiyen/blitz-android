<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_recent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${packageName}.${activityClass}"
    tools:ignore="ButtonStyle,UnusedAttribute,HardcodedText">

    <com.blitz.app.utilities.imageview_plus.ImageViewPlus
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/empty_string"
        android:scaleX="-1"
        android:src="@drawable/asset_bg_main_dark"
        app:scaleType="topCrop" />

    <TextView
        android:id="@+id/main_recent_header"
        style="@style/TextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="#40000000"
        android:fontFamily="@string/app_font_helvetica_condensed_bold"
        android:gravity="center"
        android:paddingTop="50dp"
        android:text="Week 1"
        android:textColor="@color/text_color_link"
        android:textSize="18sp" />

    <View
        android:id="@+id/main_recent_header_border_0"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignBottom="@+id/main_recent_header"
        android:background="#222222"/>

    <LinearLayout
        android:id="@+id/main_recent_scrubber"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:background="#40000000"
        android:orientation="horizontal"
        android:gravity="center"/>

    <View
        android:id="@+id/main_recent_footer_border_0"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignTop="@+id/main_recent_scrubber"
        android:background="#222222"/>
</RelativeLayout>