<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:background="@color/background_nav"
    android:baselineAligned="false"
    tools:context="${packageName}.${activityClass}"
    tools:ignore="ButtonStyle,HardcodedText">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <Button
            android:id="@+id/main_screen_nav_featured"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/button_main"
            android:contentDescription="@string/empty_string"
            android:fontFamily="@string/app_font_regular"
            android:tag="0"
            android:text="Featured"
            android:textAllCaps="true"
            android:textColor="@color/text_color_light"
            android:textSize="12sp"/>

        <View
            android:id="@+id/main_screen_nav_featured_active"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_alignParentBottom="true"
            android:background="@color/background_nav_active" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <Button
            android:id="@+id/main_screen_nav_recent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/button_main"
            android:contentDescription="@string/empty_string"
            android:fontFamily="@string/app_font_regular"
            android:tag="1"
            android:text="Recent"
            android:textAllCaps="true"
            android:textColor="@color/text_color_light"
            android:textSize="12sp"/>

        <View
            android:id="@+id/main_screen_nav_recent_active"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_alignParentBottom="true"
            android:background="@color/background_nav_active"
            android:visibility="invisible" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <Button
            android:id="@+id/main_screen_nav_settings"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/button_main"
            android:contentDescription="@string/empty_string"
            android:fontFamily="@string/app_font_regular"
            android:tag="2"
            android:text="Settings"
            android:textAllCaps="true"
            android:textColor="@color/text_color_light"
            android:textSize="12sp"/>

        <View
            android:id="@+id/main_screen_nav_settings_active"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_alignParentBottom="true"
            android:background="@color/background_nav_active"
            android:visibility="invisible" />
    </RelativeLayout>
</LinearLayout>