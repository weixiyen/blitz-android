<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${packageName}.${activityClass}"
    tools:ignore="ButtonStyle,UnusedAttribute,RelativeOverlap">

    <com.blitz.app.utilities.image.BlitzImageViewPlus
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/empty_string"
        android:scaleX="-1"
        android:src="@drawable/asset_bg_main_dark"
        app:scaleType="topCrop" />

    <TextView
        android:id="@+id/recent_header"
        style="@style/App.NavBar"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="@string/create_or_join_a_league" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignTop="@+id/recent_header"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/recent_header"
        android:contentDescription="@string/empty_string"
        android:paddingTop="4dp"
        android:src="@drawable/asset_bg_dropdown_caret" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignBottom="@+id/recent_header"
        android:background="@color/background_inner_divider"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="195dp"
        android:layout_marginTop="110dp"
        android:background="@drawable/drawable_bg_inner_dark"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            style="@style/App.TextView"
            fontPath="@string/app_font_helvetica_condensed_bold"
            android:layout_width="@dimen/screen_width"
            android:layout_height="125dp"
            android:gravity="center"
            android:lineSpacingMultiplier="1.1"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:text="@string/leagues_description"
            android:textSize="16sp"/>

        <LinearLayout
            android:layout_width="@dimen/screen_width"
            android:layout_height="40dp"
            android:layout_marginBottom="30dp"
            android:orientation="horizontal">

            <Button
                style="@style/App.Button"
                fontPath="@string/app_font_helvetica_condensed_bold"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/drawable_button_dark"
                android:paddingBottom="2dp"
                android:text="@string/create_league"
                android:textColor="@color/selector_text_link"
                android:textSize="16sp"/>

            <Button
                style="@style/App.Button"
                fontPath="@string/app_font_helvetica_condensed_bold"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/drawable_button_dark"
                android:paddingBottom="2dp"
                android:text="@string/join_a_league"
                android:textColor="@color/selector_text_link"
                android:textSize="16sp"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        style="@style/App.TextView"
        fontPath="@string/app_font_helvetica_condensed_bold"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="305dp"
        android:background="@drawable/drawable_bg_inner_dark"
        android:gravity="center"
        android:text="@string/leagues_openly_recruiting"
        android:textColor="@color/text_color_dark"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="365dp"
        android:background="@color/background_inner" />
</RelativeLayout>