<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_play"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${packageName}.${activityClass}"
    tools:ignore="ButtonStyle,UnusedAttribute">

    <com.blitz.app.utilities.imageview_plus.ImageViewPlus
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/empty_string"
        android:src="@drawable/asset_bg_main"
        app:scaleType="topCrop" />

    <RelativeLayout
        android:layout_width="@dimen/screen_width"
        android:layout_height="127dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:background="@drawable/asset_bg_profile_play"
        android:orientation="vertical">

    </RelativeLayout>

    <ImageView
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="80dp"
        android:contentDescription="@string/empty_string"
        android:src="@drawable/asset_bg_helmet_sample" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="132dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="200dp"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="99dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="33dp"
            android:contentDescription="@string/empty_string"
            android:scaleType="center"
            android:src="@drawable/asset_timeline_bg_pattern"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="99dp"
            android:layout_alignParentTop="true"
            android:contentDescription="@string/empty_string"
            android:scaleType="center"
            android:src="@drawable/asset_timeline_bg" />

        <ImageView
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:layout_marginTop="27dp"
            android:contentDescription="@string/empty_string"
            android:src="@drawable/asset_timeline_bg_highlight"/>
    </RelativeLayout>

    <include
        android:id="@+id/main_play_timeline_container"
        layout="@layout/main_screen_fragment_play_timeline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"/>

    <include
        android:id="@+id/main_play_queued_container"
        layout="@layout/main_screen_fragment_play_queued"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            style="@style/TextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:fontFamily="@string/app_font_helvetica_condensed_bold"
            android:gravity="center"
            android:text="You have $9.50"
            android:textColor="@color/text_color_light"
            android:textSize="14sp"/>

        <TextView
            style="@style/TextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:fontFamily="@string/app_font_helvetica_condensed_bold"
            android:gravity="center"
            android:text="|"
            android:textColor="@color/text_color_light"
            android:textSize="14sp"/>

        <TextView
            style="@style/TextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:fontFamily="@string/app_font_helvetica_condensed_bold"
            android:gravity="center"
            android:text="Add Money"
            android:textColor="@color/text_color_link"
            android:textSize="14sp"/>

        <TextView
            style="@style/TextViewStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:fontFamily="@string/app_font_helvetica_condensed_bold"
            android:gravity="center_vertical|right"
            android:text="Rules"
            android:textColor="@color/text_color_link"
            android:textSize="14sp"/>
    </LinearLayout>
</RelativeLayout>