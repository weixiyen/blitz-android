<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:gravity="center"
    android:orientation="vertical">

    <com.blitz.app.utilities.image.BlitzImageView
        android:id="@+id/player_avatar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:contentDescription="@string/empty_string"
        android:padding="10dp"
        android:src="@drawable/asset_bg_helmet_sample"
        app:cacheImageURL="false"
        app:clearInitialContent="true"/>

    <TextView android:id="@+id/player_name"
        style="@style/App.TextView"
        fontPath="@string/app_font_helvetica_condensed_bold"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:textColor="@color/text_color_light"
        android:textSize="13sp"/>

    <TextView android:id="@+id/player_score"
        style="@style/App.TextView"
        fontPath="@string/app_font_helvetica_condensed_bold"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:text="@string/number_small"
        android:textColor="@color/text_color_light"
        android:textSize="22sp"/>
</LinearLayout>