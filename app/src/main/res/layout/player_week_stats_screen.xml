<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/player_week_stats"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="HardcodedText">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color_link"
        android:gravity="center"
        android:text="Stats"
        android:background="@color/background_navigation"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="150sp"
        android:padding="10sp"
        android:background="@color/background_inner_dark">

        <TableRow android:layout_height="60sp"

        android:layout_width="fill_parent">

        <TextView android:id="@+id/first_name"
            android:layout_weight="1"
            android:text="Johnny"/>

        <TextView android:id="@+id/total_points_label"
            android:layout_weight="2"
            android:gravity="right"
            android:text="Total Points"/>

        <TextView android:id="@+id/week_label"
            android:layout_weight="1"
            android:gravity="right"
            android:text="Week"/>
        </TableRow>

        <TableRow android:layout_height="60sp"
            android:layout_width="fill_parent">

            <TextView android:id="@+id/last_name"
                android:layout_weight="1"
                android:text="Football"/>

            <TextView android:id="@+id/week"
                android:layout_weight="2"
                android:gravity="right"
                android:text="0"/>

            <TextView android:id="@+id/total_points"
                android:layout_weight="1"
                android:gravity="right"
                android:text="0.00"/>

        </TableRow>

    </TableLayout>

    <ListView
        android:id="@+id/player_stats_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@color/background_inner"/>


</LinearLayout>