<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:ignore="UselessParent,RtlSymmetry">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="@drawable/asset_bg_dialog_rules"
        android:orientation="vertical"
        android:paddingBottom="10dp">

        <TextView
            style="@style/TextViewStyle"
            fontPath="@string/app_font_helvetica_condensed_bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="20dp"
            android:shadowColor="@color/text_color_shadow_faint"
            android:text="@string/rules_6_line_00"
            android:textColor="@color/text_color_black"
            android:textSize="28sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                style="@style/TextViewStyle"
                fontPath="@string/app_font_light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/asset_bg_dialog_rules_bullet"
                android:paddingBottom="20dp"
                android:paddingLeft="35dp"
                android:paddingRight="25dp"
                android:shadowColor="@color/text_color_shadow_faint"
                android:text="@string/rules_6_line_01"
                android:textColor="@color/text_color_black"
                android:textSize="16sp"/>

            <TextView
                style="@style/TextViewStyle"
                fontPath="@string/app_font_light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/asset_bg_dialog_rules_bullet"
                android:paddingBottom="20dp"
                android:paddingLeft="35dp"
                android:paddingRight="25dp"
                android:shadowColor="@color/text_color_shadow_faint"
                android:text="@string/rules_6_line_02"
                android:textColor="@color/text_color_black"
                android:textSize="16sp"/>

            <TextView
                style="@style/TextViewStyle"
                fontPath="@string/app_font_light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/asset_bg_dialog_rules_bullet"
                android:paddingBottom="20dp"
                android:paddingLeft="35dp"
                android:paddingRight="25dp"
                android:shadowColor="@color/text_color_shadow_faint"
                android:text="@string/rules_6_line_03"
                android:textColor="@color/text_color_black"
                android:textSize="16sp"/>

            <TextView
                style="@style/TextViewStyle"
                fontPath="@string/app_font_light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/asset_bg_dialog_rules_bullet"
                android:paddingLeft="35dp"
                android:paddingRight="25dp"
                android:shadowColor="@color/text_color_shadow_faint"
                android:text="@string/rules_6_line_04"
                android:textColor="@color/text_color_black"
                android:textSize="16sp"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>