<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_recent_list_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/drawable_bg_inner"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingTop="10dp">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center_vertical">

        <com.blitz.app.utilities.image.BlitzImageView
            android:id="@+id/recent_match_p1_avatar"
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:contentDescription="@string/empty_string"
            android:src="@drawable/asset_bg_helmet_sample" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/recent_match_p1_name"
                style="@style/LeaderboardListItem"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|left"
                android:singleLine="true"
                android:text="@string/lorum_ipsum_tiny"
                android:textColor="@color/text_color_light"/>

            <TextView
                android:id="@+id/recent_match_p2_name"
                style="@style/LeaderboardListItem"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|right"
                android:singleLine="true"
                android:text="@string/lorum_ipsum_tiny"
                android:textColor="@color/text_color_light"/>
        </LinearLayout>

        <com.blitz.app.utilities.image.BlitzImageView
            android:id="@+id/recent_match_p2_avatar"
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:contentDescription="@string/empty_string"
            android:scaleX="-1"
            android:src="@drawable/asset_bg_helmet_sample" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="55dp"
        android:layout_marginRight="55dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/recent_match_p1_score"
            style="@style/App.TextView"
            fontPath="@string/app_font_helvetica_condensed_bold"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|left"
            android:text="@string/number_large"
            android:textSize="24sp"/>

        <TextView
            android:id="@+id/recent_match_p2_score"
            style="@style/App.TextView"
            fontPath="@string/app_font_helvetica_condensed_bold"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|right"
            android:text="@string/number_large"
            android:textSize="24sp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:background="@color/background_inner_divider" />

    <com.blitz.app.utilities.textview.BlitzTextView
        android:id="@+id/recent_match_status"
        style="@style/ListItemSmall"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#0D000000"
        android:gravity="center|bottom"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:text="@string/lorum_ipsum_word"
        android:textAllCaps="true"
        app:clearInitialContent="true"/>
</LinearLayout>