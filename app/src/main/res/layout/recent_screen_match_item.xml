
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_recent_list_item"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    >

    <TextView android:id="@+id/main_list_p1_score"
        style="@style/ScoreStyle"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:paddingLeft="5dp"
        android:paddingRight="0dp"/>
    <TextView android:id="@+id/main_list_status"
        style="@style/ListItemSmall"
        android:layout_height="50dp"
        android:layout_width="0dp"
        android:layout_weight="3.236"
        android:gravity="center"/>
    <TextView android:id="@+id/main_list_p2_score"
        style="@style/ScoreStyle"
        android:textColor="@color/text_color_light"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:paddingLeft="0dp"
        android:paddingRight="5dp"/>

</LinearLayout>