<resources xmlns:tools="http://schemas.android.com/tools" tools:ignore="NewApi">

    <!-- Settings Styles -->
    <style name="App.SettingsItem" parent="App.TextView">
        <item name="fontPath">@string/app_font_helvetica_condensed_bold</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">@drawable/drawable_bg_inner</item>
        <item name="android:paddingLeft">25dp</item>
        <item name="android:paddingRight">25dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center|left</item>
        <item name="android:textColor">@color/text_color_dark</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="App.SettingsItem.Dark" parent="App.SettingsItem">
        <item name="android:background">@drawable/drawable_bg_inner_dark</item>
    </style>

    <!-- Misc Styles -->
    <style name="ScoreStyle">
        <item name="fontPath">@string/app_font_helvetica_condensed_bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ListItemSmall">
        <item name="fontPath">@string/app_font_helvetica_condensed_bold</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="MatchupNflPlayerName">
        <item name="fontPath">@string/app_font_helvetica_condensed_bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_color_light</item>
    </style>

    <style name="MatchupNflPlayerScore">
        <item name="fontPath">@string/app_font_helvetica_condensed_bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_color_light</item>
    </style>

    <style name="MatchupNflPlayerTeam">
        <item name="fontPath">@string/app_font_helvetica_condensed_bold</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/text_color_medium_grey</item>
    </style>

    <style name="MatchupNflGameResult">
        <item name="fontPath">@string/app_font_helvetica_condensed_bold</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/text_color_light_grey</item>
    </style>

    <style name="StatInfoLabel">
        <item name="android:textSize">15sp</item>
        <item name="fontPath">@string/app_font_helvetica_condensed_bold</item>
        <item name="android:textColor">@color/text_color_light_grey</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="StatInfo">
        <item name="android:textSize">25sp</item>
        <item name="fontPath">@string/app_font_helvetica_condensed_bold</item>
        <item name="android:textColor">@color/text_color_light</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="StatListItem">
        <item name="android:textSize">17sp</item>
        <item name="fontPath">@string/app_font_helvetica_condensed_bold</item>
        <item name="android:textColor">@color/text_color_light</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="LeaderboardListItem">
        <item name="android:textSize">15sp</item>
        <item name="fontPath">@string/app_font_helvetica_condensed_bold</item>
        <item name="android:textColor">@color/text_color_light</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>