<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.Holo">
        <item name="android:windowBackground">@color/background_primary</item>

        <!-- No action bar on the main theme -->
        <item name="android:actionBarStyle">@null</item>

        <!-- View pager indicator style. -->
        <item name="vpiCirclePageIndicatorStyle">@style/TabStyle</item>
    </style>

    <style name="AppTheme.ActionBar" parent="AppTheme">

        <!-- Provide custom action bar style -->
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>

    <style name="MyActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@drawable/asset_action_bar</item>
    </style>

    <!-- View pager indicator style. -->
    <style name="TabStyle" parent="Widget">
        <item name="android:background">@android:color/transparent</item>
        <item name="fillColor">@color/button_color_0</item>
        <item name="pageColor">@color/text_color_light</item>
        <item name="strokeWidth">0dp</item>
        <item name="radius">4dp</item>
    </style>
</resources>