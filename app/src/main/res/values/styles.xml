<resources xmlns:tools="http://schemas.android.com/tools"

    tools:ignore="NewApi">

    <!-- Base application theme. -->
    <style name="App.Theme" parent="@android:style/Theme.Holo.NoActionBar.Fullscreen">

        <!-- Set a theme window background -->
        <item name="android:windowBackground">@null</item>

        <!-- View pager indicator style. -->
        <item name="vpiCirclePageIndicatorStyle">@style/App.PagerIndicatorStyle</item>

        <!-- Disable over-scroll effects -->
        <item name="android:overScrollMode">never</item>

        <!-- Custom downdown style -->
        <item name="android:dropDownListViewStyle">@style/App.DropDown</item>
    </style>

    <!-- Drop down spinner style. -->
    <style name="App.DropDown" parent="android:Widget.ListView.DropDown">
        <item name="android:divider">@color/background_inner_divider</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <!-- View pager indicator style. -->
    <style name="App.PagerIndicatorStyle" parent="Widget">
        <item name="android:background">@android:color/transparent</item>
        <item name="fillColor">@color/button_color_0</item>
        <item name="pageColor">@color/text_color_light</item>
        <item name="strokeWidth">0dp</item>
        <item name="radius">4dp</item>
    </style>

    <!-- Standard button style. -->
    <style name="App.Button" parent="@android:style/Widget.Button">
        <item name="android:textColor">@color/text_color_light</item>
        <item name="android:textSize">18sp</item>
        <item name="fontPath">@string/app_font_regular</item>
        <item name="android:shadowColor">@color/text_color_shadow</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:contentDescription">@string/empty_string</item>
        <item name="android:singleLine">true</item>
    </style>

    <!-- Standard text view style. -->
    <style name="App.TextView" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/text_color_light</item>
        <item name="android:textSize">18sp</item>
        <item name="fontPath">@string/app_font_regular</item>
        <item name="android:shadowColor">@color/text_color_shadow</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:contentDescription">@string/empty_string</item>
    </style>

    <!-- Standard Navigation Bar Style -->
    <style name="App.NavBar" parent="App.TextView">
        <item name="fontPath">@string/app_font_helvetica_condensed_bold</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/navbar_height</item>
        <item name="android:background">@drawable/drawable_bg_navigation</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/active_blue</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ScoreStyle">
        <item name="fontPath">@string/app_font_helvetica_condensed_bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ListItemSmall">
        <item name="fontPath">@string/app_font_helvetica_condensed_bold</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="MatchupNflPlayerName">
        <item name="fontPath">@string/app_font_helvetica_condensed_bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_color_light</item>
    </style>

    <style name="MatchupNflPlayerScore">
        <item name="fontPath">@string/app_font_helvetica_condensed_bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_color_light</item>
    </style>

    <style name="MatchupNflPlayerTeam">
        <item name="fontPath">@string/app_font_helvetica_condensed_bold</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/text_color_medium_grey</item>
    </style>

    <style name="MatchupNflGameResult">
        <item name="fontPath">@string/app_font_helvetica_condensed_bold</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/text_color_light_grey</item>
    </style>

    <style name="StatInfoLabel">
        <item name="android:textSize">15sp</item>
        <item name="fontPath">@string/app_font_helvetica_condensed_bold</item>
        <item name="android:textColor">@color/text_color_light_grey</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="StatInfo">
        <item name="android:textSize">25sp</item>
        <item name="fontPath">@string/app_font_helvetica_condensed_bold</item>
        <item name="android:textColor">@color/text_color_light</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="StatListItem">
        <item name="android:textSize">17sp</item>
        <item name="fontPath">@string/app_font_helvetica_condensed_bold</item>
        <item name="android:textColor">@color/text_color_light</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="LeaderboardListItem">
        <item name="android:textSize">15sp</item>
        <item name="fontPath">@string/app_font_helvetica_condensed_bold</item>
        <item name="android:textColor">@color/text_color_light</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>