<resources xmlns:tools="http://schemas.android.com/tools"

    tools:ignore="NewApi">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.Holo.NoActionBar.Fullscreen">

        <!-- Set a theme window background -->
        <item name="android:windowBackground">@null</item>

        <!-- View pager indicator style. -->
        <item name="vpiCirclePageIndicatorStyle">@style/TabStyle</item>
    </style>

    <!-- View pager indicator style. -->
    <style name="TabStyle" parent="Widget">
        <item name="android:background">@android:color/transparent</item>
        <item name="fillColor">@color/button_color_0</item>
        <item name="pageColor">@color/text_color_light</item>
        <item name="strokeWidth">0dp</item>
        <item name="radius">4dp</item>
    </style>

    <!-- Standard button style. -->
    <style name="ButtonStyle" parent="@android:style/Widget.Button">
        <item name="android:textColor">@color/text_color_light</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@string/app_font_regular</item>
        <item name="android:shadowColor">@color/text_color_shadow</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:contentDescription">@string/empty_string</item>
        <item name="android:singleLine">true</item>
    </style>

    <!-- Standard text view style. -->
    <style name="TextViewStyle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/text_color_light</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@string/app_font_regular</item>
        <item name="android:shadowColor">@color/text_color_shadow</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:contentDescription">@string/empty_string</item>
    </style>

</resources>