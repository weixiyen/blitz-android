<resources>

    <declare-styleable name="PlusImageView">

        <!-- Sets a drawable as the default/fallback of this ImageViewPlus -->
        <attr name="defaultDrawable" format="reference" />

        <!-- The drawable to use for the selector on this ImageViewPlus -->
        <attr name="layerDrawable" format="reference" />

        <!-- The layer within the given selectorDrawable -->
        <attr name="contentLayerId" format="integer" />

        <!-- Sets a color (or ColorStateList) as the overlay tint color for this ImageViewPlus. -->
        <attr name="overlayTintColor" format="reference" />

        <!-- The scaleType for the ImageViewPlus; where applicable, these should match the value on the built-in ImageView -->
        <attr name="scaleType">
            <enum name="matrix" value="0" />
            <enum name="fitXY" value="1" />
            <enum name="fitStart" value="2" />
            <enum name="fitCenter" value="3" />
            <enum name="fitEnd" value="4" />
            <enum name="center" value="5" />
            <enum name="centerCrop" value="6" />
            <enum name="centerInside" value="7" />
            <enum name="topCrop" value="8" />
        </attr>
    </declare-styleable>

    <!-- Custom attribute for Calligraphy -->
    <attr name="fontPath" format="string"/>

    <!-- Should initial content of a view
         be cleared (text images, etc). -->
    <attr name="clearInitialContent" format="boolean" />

    <declare-styleable name="BlitzTextView">

        <!-- Should the text be cached. -->
        <attr name="cacheText" format="boolean" />

        <attr name="clearInitialContent"/>

    </declare-styleable>

    <declare-styleable name="BlitzImageView">

        <!-- Should the image be cached. -->
        <attr name="cacheImage" format="boolean" />

        <attr name="clearInitialContent"/>

    </declare-styleable>

</resources>